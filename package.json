{
  "name": "@gifcommit/golden-grids",
  "version": "2.0.0",
  "description": "A React library for generating golden ratio grid layouts.",
  "main": "dist/golden-grids.cjs.js",
  "module": "dist/golden-grids.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/golden-grids.es.js",
      "require": "./dist/golden-grids.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "start": "vite",
    "serve": "vite preview",
    "build:demo": "VITE_BUILD_DEMO=1 vite build",
    "test": "jest",
    "prepack": "npm run build",
    "prepublishOnly": "npm test",
    "setup": "husky install"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.7.0",
    "husky": "^8.0.0",
    "jest": "^27.4.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.32.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "semantic-release": "^25.0.3",
    "ts-jest": "^27.1.0",
    "tslib": "^2.8.1",
    "typescript": "^4.9.5",
    "vite": "^4.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gregoryedgerton/golden-grids"
  },
  "keywords": [
    "react",
    "golden ratio",
    "grid",
    "layout"
  ],
  "author": "Gregory Edgerton",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.test.json"
      }
    }
  }
}
